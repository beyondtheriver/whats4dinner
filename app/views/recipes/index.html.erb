<div id="banner">
	<%= render 'banner' %>
  <h2><%= link_to "What's 4 Dinner", root_path %></h2>
</div>
<span id="top">
<button id="button_style" class="log_out"><%= link_to "Log out", destroy_user_session_path, method: :delete %></button>
</span>
<div id="whole_page_wrapper">
   <div id="profile_partial">
      <%= render partial: "profiles/show", locals: { profile: @profile } %>
   </div>
   <div id="recipe_wrapper">
      <h1>Recipe Finder</h1>
      <%= render 'search' %>
      <%= link_to 'https://twitter.com/intent/tweet?via=whats4dinner&text=I%27m%20hungry%2C%20but%20indecisive%21%20What%20should%20I%20eat%3F&hashtags=whats4dinner&' do %>
         <%= image_tag "twitter_small.png", id: "twitter_bird"%>
      <% end%>
      <a id="twitter_intent" href="https://twitter.com/intent/tweet?via=whats4dinner&text=I%27m%20hungry%2C%20but%20indecisive%21%20What%20should%20I%20eat%3F&hashtags=whats4dinner&">Tweet for Help!</a>
      <div id='recipe-search-container'></div>
   </div>
</div>
