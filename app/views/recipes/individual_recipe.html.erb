<div id="banner">
  <h2><%= link_to "What's 4 Dinner", root_path %></h2>
</div>
<div id="recipe_wrapper">
    <div id="recipe_title">
        <%= @title  %>
    </div>
    <br>
    <div id="pic_and_ing">
        <%= image_tag(@image, :alt => "recipe picture", :id => "recipe_picture") %>
        <ul>
            <% @extended_ing.each do |key| %>
                <li><%= key.original_string %></li>
            <% end %>
        </ul>
    </div>
    <%= raw @recipe.instructions %>
    <br>
    Vegetarian:
         <% if @recipe.vegetarian === true %>
         <%= "Yes" %>
         <% else %>
         <%= "No" %>
          <%  end %>
    <br>
    Vegan:
         <% if @recipe.vegan === true %>
         <%= "Yes" %>
         <% else %>
         <%= "No" %>
          <%  end %>
    <br>
    Gluten Free:
         <% if @recipe.gluten_free === true %>
         <%= "Yes" %>
         <% else %>
         <%= "No" %>
          <%  end %>
    <br>
    Dairy Free:
         <% if @recipe.dairy_free === true %>
         <%= "Yes" %>
         <% else %>
         <%= "No" %>
          <%  end %>

<br>
<%= form_tag('/favorite_recipe', :id => 'favoriteForm', remote: true) do %>
    <%= hidden_field_tag 'recipe_id', @recipe.id %>
      <%= submit_tag "Add this Recipe to my Favorites!", id: "favorite_submit" %>
   <% end %>
